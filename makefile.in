# template makefile for DIALOG
#
SHELL		= /bin/sh

VERSION		= `cat VERSION`

prefix		= @prefix@
exec_prefix	= @exec_prefix@

srcdir		= @srcdir@

DESTDIR		=
bindir		= $(DESTDIR)@bindir@
libdir		= $(DESTDIR)@libdir@
mandir		= $(DESTDIR)@mandir@
MANDIR		= $(mandir)/man1

CFLAGS		= @CFLAGS@
CPPFLAGS	= @CPPFLAGS@ @DEFS@ -I. -I$(srcdir) -DVERSION=\"$(VERSION)\"
EXTRA_CFLAGS	= @EXTRA_CFLAGS@
CC		= @CC@
LDFLAGS		= @LDFLAGS@
LIBS		= @LIBS@
RANLIB		= @RANLIB@

RM		= rm -f

INSTALL		= @INSTALL@
INSTALL_PROGRAM	= @INSTALL_PROGRAM@
INSTALL_DATA	= @INSTALL_DATA@

#
# Standard .c to .o compile line.
#
.c.o:
@RULE_CC@
	@ECHO_CC@$(CC) $(CFLAGS) $(EXTRA_CFLAGS) $(CPPFLAGS) -c $<

EXTRAOBJS = @EXTRAOBJS@
OBJS = $(EXTRAOBJS) \
	checklist.o \
	inputbox.o \
	inputstr.o \
	menubox.o \
	mousewget.o \
	msgbox.o \
	textbox.o \
	util.o \
	yesno.o

SRCS = $(OBJS:.o=.c)

LIB	= libdialog.a
PROG	= dialog
ALL	= $(LIB) $(PROG)

DIRS	= $(bindir) $(MANDIR)

all: $(ALL)

$(OBJS) : $(srcdir)/dialog.h config.h

$(LIB) : $(OBJS)
	ar crv $(LIB) $(OBJS)
	$(RANLIB) $@

dialog: $(LIB) dialog.o
	$(CC) -o $@ dialog.o -L. -ldialog $(LDFLAGS) $(LIBS)

clean:
	rm -f core *.o *~ $(ALL)

distclean : clean
	rm -f makefile config.h config.cache config.log config.status

install: $(ALL) $(DIRS)
	$(INSTALL_PROGRAM) -s $(PROG) $(bindir)
	$(INSTALL_DATA) dialog.1 $(MANDIR)

uninstall:
	rm -f $(bindir)/$(PROG)
	rm -f $(MANDIR)/dialog.1

$(bindir) \
$(MANDIR) : ; $(srcdir)/mkdirs.sh $@
